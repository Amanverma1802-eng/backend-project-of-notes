<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>

</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input type="text" placeholder="Title goes here" class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" name="title">
                <textarea placeholder="write your task details" rows="10" cols="50" class="block w-full rounded-md outline-none px-5 py-2 mt-2 bg-zinc-800 resize-none" name="details"></textarea>
                <input type="submit" class="mt-2 bg-blue-600 px-5 py-2 rounded-lg" value="create task">
            </form>
        </div>
        <div class="task p-10 flex gap-3 flex-wrap">
            <% if(files.length>0){%>
                <% files.forEach(function(val){%>
                    <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val%></h1>
                        <div class="flex w-full justify-between items-center mt-3">
                            <a href="/files/<%= val %>" class="text-blue-600 inline-block">Read more...</a>
                            <a class="text-zinc-600" href="/edit/<%= val %>">edit filename</a>
                        </div>
                    </div>
                <%})%>
            <%} else{%>
                <h3 class="text-zinc-600">no tasks yet...</h3>
            <%}%>

        </div>
    </div>
</body>
</html>